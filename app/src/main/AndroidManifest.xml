<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iitp.njack.iitp_connect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:name=".IITPConnectApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".core.home.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.database.room.DatabaseContentProvider"
            android:authorities="@string/authority"
            android:exported="false"
            android:syncable="true"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name=".core.calendar.views.CodingCalendarHomeActivity"
            android:parentActivityName=".core.home.HomeActivity" />
        <activity
            android:name=".core.calendar.views.ContestDetailsActivity"
            android:parentActivityName=".core.calendar.views.CodingCalendarHomeActivity" />
        <activity android:name=".core.calendar.views.Settings"></activity>

        <provider
            android:authorities="com.iitp.njack.iitp_connect"
            android:name=".IITPConnectProvider"/>
    </application>

</manifest>